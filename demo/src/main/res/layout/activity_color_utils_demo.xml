<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/parseTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="解析颜色"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    tools:text="解析颜色" />

                <TextView
                    android:id="@+id/parseColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="#ff0000"
                    android:textSize="16sp"
                    tools:text="解析后的颜色" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/parseEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="输入颜色字符串" />

                <Button
                    android:id="@+id/parseBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="解析颜色" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/parseImg"
            android:layout_width="100dp"
            android:layout_height="100dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/randomColorBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产生随机颜色" />

        <TextView
            android:id="@+id/randomColorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="#ff0000"
            android:textSize="16sp"
            tools:text="解析后的颜色" />

        <ImageView
            android:id="@+id/randomColorImg"
            android:layout_width="100dp"
            android:layout_height="100dp" />

    </LinearLayout>
</LinearLayout>